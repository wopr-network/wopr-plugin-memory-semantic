{
  "name": "wopr-plugin-memory-semantic",
  "version": "1.0.0",
  "description": "Semantic memory search with embeddings, auto-recall, and auto-capture for WOPR",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "format": "biome format --write src/",
    "check": "biome check --fix src/ && tsc --noEmit"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "usearch": "^2.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "wopr": "*"
  },
  "peerDependenciesMeta": {
    "wopr": {
      "optional": true
    }
  },
  "keywords": [
    "wopr",
    "plugin",
    "memory",
    "semantic",
    "embeddings",
    "vector-search"
  ],
  "license": "MIT",
  "wopr": {
    "plugin": {
      "entry": "dist/index.js"
    }
  }
}
